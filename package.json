{
  "name": "easy-filer",
  "version": "1.0.0",
  "description": "FBR-compliant invoicing software for Pakistani businesses",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "start": "turbo run start",
    "db:generate": "cd packages/database && npm run generate",
    "db:push": "cd packages/database && npm run push",
    "db:migrate": "cd packages/database && npm run migrate",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test:e2e": "playwright test",
    "test:unit": "jest",
    "test:fbr-integration": "jest --testPathPattern=fbr-integration"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.7.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.2.0",
    "turbo": "^2.5.8",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "invoicing",
    "fbr",
    "pakistan",
    "tax-compliance",
    "saas",
    "pral-api"
  ],
  "author": "Easy Filer Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "class-variance-authority": "^0.7.1",
    "react-dropzone": "^14.3.8"
  }
}
